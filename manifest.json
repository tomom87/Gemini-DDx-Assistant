{
    "manifest_version": 3,
    "name": "DDx Assistant (Preview)",
    "version": "1.1.0",
    "description": "Clinical differential diagnosis assistant with Gemini 3.0 Flash Preview. For research/reference only.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "sidePanel",
        "contextMenus",
        "storage",
        "clipboardWrite",
        "offscreen"
    ],
    "host_permissions": [
        "https://generativelanguage.googleapis.com/*"
    ],
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "options_page": "options.html",
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}